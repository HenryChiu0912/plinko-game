import random
import time

def plinko():
    slots = 9  # PLINKO板上的槽數
    position = random.randint(1, slots)  # 球的初始位置隨機
    print_board(position, slots)

    for _ in range(7):  # 球從上往下彈跳七次
        direction = random.choice([-1, 1])  # 隨機選擇彈跳方向
        position += direction
        position = max(1, min(slots, position))  # 確保位置在1到slots之間
        print_board(position, slots)
        time.sleep(0.5)

    return position

def print_board(position, slots):
    for row in range(slots):
        if row % 2 == 0:
            print("|" + " *"*slots + " |")
        else:
            print("|*" + " *"*slots + "|")

    print("|" + "  "*(position-1) + "*" + "  "*(slots-position) + "|")
    print("|_|"*slots)

def main():
    print("歡迎來到PLINKO遊戲！")
    print("請投放球，看它最後會掉到哪一列的槽中。")
    input("按Enter開始遊戲...")
    final_position = plinko()
    print("球最後掉到了第{}列的槽中。".format(final_position))

if __name__ == "__main__":
    main()

